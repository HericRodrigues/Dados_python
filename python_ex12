import pygame

pygame.init()

w = 1000
h = 500

screen = pygame.display.set_mode((w, h))
pygame.display.set_caption('Hey boi')
clock = pygame.time.Clock()
rodando = True

while rodando:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            rodando = False
    
    
    screen.fill("purple")
    pygame.display.flip
    pygame.display.update()
    clock.tick(60)

pygame.quit()
